{
    "name": "silverstripe/cms-events",
    "description": "Triggers events for common actions in Silverstripe CMS",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "CMS",
        "events"
    ],
    "license": "BSD-3-Clause",
    "require": {
        "php": "^8.3",
        "silverstripe/framework": "^6",
        "silverstripe/event-dispatcher": "^2"
    },
    "require-dev": {
        "silverstripe/documentation-lint": "^1",
        "silverstripe/recipe-testing": "^4",
        "silverstripe/frameworktest": "^2",
        "silverstripe/standards": "^1",
        "phpstan/extension-installer": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "SilverStripe\\CMSEvents\\": "src/",
            "SilverStripe\\CMSEvents\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-1": "1.x-dev",
            "dev-2": "2.x-dev",
            "dev-master": "3.x-dev"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs src/ tests/",
        "lint-clean": "vendor/bin/phpcbf src/ tests/"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
